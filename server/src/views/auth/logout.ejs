<%- include('../layouts/default', {
    title: 'Logout - OIDC Server',
    styles: ['/css/auth.css'],
    content: `
        <div class="bg-white p-8 rounded-lg shadow-md w-96">
            <h2 class="text-2xl font-bold text-center mb-6">Logout</h2>
            
            <% if (error) { %>
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                    <%= error %>
                </div>
            <% } %>
            
            <% if (clientInfo) { %>
                <div class="mb-6 p-4 bg-gray-50 rounded-md">
                    <p class="text-sm text-gray-600 mb-2">
                        <strong>Application:</strong> <%= clientInfo.name || clientInfo.clientId %>
                    </p>
                    <p class="text-sm text-gray-600">
                        You are currently logged in to this application.
                    </p>
                </div>
            <% } %>
            
            <div class="mb-6">
                <p class="text-gray-700 text-center">
                    Are you sure you want to logout?
                </p>
            </div>
            
            <div class="flex space-x-4">
                <form method="POST" action="/oauth/logout" class="flex-1">
                    <input type="hidden" name="logout_token" value="<%= logoutToken %>">
                    <button 
                        type="submit" 
                        class="w-full bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-md"
                    >
                        Yes, Logout
                    </button>
                </form>
                
                <a 
                    href="<%= postLogoutRedirectUri || '#' %>" 
                    class="flex-1 bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-4 rounded-md text-center"
                >
                    Cancel
                </a>
            </div>
            
            <% if (postLogoutRedirectUri) { %>
                <div class="mt-4 text-center">
                    <p class="text-xs text-gray-500">
                        After logout, you will be redirected to: 
                        <span class="font-mono text-xs"><%= postLogoutRedirectUri %></span>
                    </p>
                </div>
            <% } %>
        </div>
    `
}) %>
